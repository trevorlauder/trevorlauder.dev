---
import { Image } from "astro:assets";
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import ogImage from "../assets/og.png";

const {
  title,
  description,
  heroImage,
  heroImageAlt = "",
  heroImageHeight = 450,
  heroImageWidth = 2400,
  markdownHtml,
} = Astro.props;
---

<html lang="en" class={Astro.props.class}>
  <head>
    <BaseHead title={title} description={description} image={ogImage} />
    <script src="../scripts/gallery-links.js"></script>
    <script src="../scripts/quotes.js"></script>
  </head>
  <body class="theme-background-dark bg-white min-h-screen overflow-x-hidden">
    <Header />
    <main>
      <div class="relative w-full bg-white overflow-hidden max-w-full">
        <div id="quote" class="quote-overlay"></div>
        {
          heroImage && (
            <Image
              src={heroImage}
              alt={heroImageAlt}
              width={heroImageWidth}
              height={heroImageHeight}
              loading="eager"
              class="theme-background-dark w-full h-auto object-cover aspect-[2400/450]"
            />
          )
        }
        {
          (
            <div class="absolute top-2 left-10 text-white text-shadow-lg text-2xl font-bold text-left max-w-[60vw] px-3 py-2 pointer-events-none">
              DevOps • Code • Photography
            </div>
          )
        }
      </div>
      <hr class="index-hr-top-index" />
      <article>
        <slot />
      </article>
      <div class="index-markdown" set:html={markdownHtml} />
    </main>
    <Footer />
  </body>
</html>
