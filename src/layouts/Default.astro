---
import { Image } from "astro:assets";
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

const {
  title,
  description,
  heroImage,
  heroImageAlt = "",
  heroImageWidth = 1020,
  heroImageHeight = 510,
} = Astro.props;
---

<html lang="en" class={Astro.props.class}>
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body class="theme-background-dark min-h-screen">
    <Header />
    <main>
      <div
        class={`prose dark:prose-invert mx-auto p-4 ${Astro.props.containerClass ?? "max-w-4xl"}`}
      >
        {
          heroImage && (
            <div class="flex justify-center mb-4 mt-8">
              <a
                href="https://www.linkedin.com/in/trevor-lauder"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Trevor Lauder on LinkedIn"
              >
                <div
                  class="relative inline-block profile-holo overflow-hidden rounded-full"
                  style="width:fit-content;"
                >
                  <Image
                    src={heroImage}
                    width={heroImageWidth}
                    height={heroImageHeight}
                    alt={heroImageAlt}
                    class="rounded-full shadow-lg"
                    style="object-fit:cover;"
                  />
                  <div
                    class="holographic-effect rounded-full"
                    style="pointer-events:none;"
                  />
                </div>
              </a>
            </div>
          )
        }
        <div class="mb-4 py-4 text-center leading-tight">
          <h1 class="mb-2 text-4xl font-bold">{title}</h1>
          <hr class="index-hr-top" />
        </div>
          <slot />
         <hr class="index-hr-bottom" />
      </div>
     
    </main>
    <Footer />
  </body>
</html>
